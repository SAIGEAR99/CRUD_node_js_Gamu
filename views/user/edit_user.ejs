            document.addEventListener("DOMContentLoaded", function() {
                // กำหนดฟังก์ชันสำหรับการตั้งค่าอัปโหลดไฟล์
                function setupFileUpload(dropZoneSelector, inputFileId, previewImageId) {
                    var dropZone = document.querySelector(dropZoneSelector);
                    var fileInput = document.getElementById(inputFileId);
                    var previewImage = document.getElementById(previewImageId);
            
                    dropZone.addEventListener('click', function() {
                        fileInput.click();
                    });
            
                    fileInput.addEventListener('change', function() {
                        if (fileInput.files.length > 0) {
                            var selectedFile = fileInput.files[0];
                            var objectURL = URL.createObjectURL(selectedFile);
                            previewImage.src = objectURL;
                            previewImage.style.display = 'block';
                        } else {
                            previewImage.style.display = 'none';
                        }
                    });
            
                    dropZone.addEventListener('dragover', function(e) {
                        e.preventDefault();
                        dropZone.classList.add('drop-zone--over');
                    });
            
                    ['dragleave', 'dragend'].forEach(type => {
                        dropZone.addEventListener(type, function() {
                            dropZone.classList.remove('drop-zone--over');
                        });
                    });
            
                    dropZone.addEventListener('drop', function(e) {
                        e.preventDefault();
                        dropZone.classList.remove('drop-zone--over');
                        if (e.dataTransfer.files.length > 0) {
                            fileInput.files = e.dataTransfer.files;
                            var selectedFile = fileInput.files[0];
                            var objectURL = URL.createObjectURL(selectedFile);
                            previewImage.src = objectURL;
                            previewImage.style.display = 'block';
                        } else {
                            previewImage.style.display = 'none';
                        }
                    });
                }
            
