            <script>


function toggleLike(postId, userId) {
    fetch(`/post/api/like?postId=${postId}&userId=${userId}`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            let likeButton = document.querySelector(`#likeButton-${postId}`);
            let likeCount = document.querySelector(`#likeCount-${postId}`);

            if (data.liked) {
                likeButton.classList.add('liked');
                
             
            } else {
                likeButton.classList.remove('liked');
                
                
            }
            likeCount.textContent = `${data.likeCount} Likes`;
        })
        .catch(error => {
            console.error('Error:', error);
        });
}

            let currentPage = 0;
            const limit = 5;
            let isFetching = false;
 
            function loadMorePosts() {
    if (isFetching) return;
    isFetching = true;

    fetch(`/post/api/posts?page=${currentPage}&limit=${limit}`)
        .then(response => response.json())
        .then(data => {
            const mainContent = document.querySelector('.main-content');

            data.forEach(post => {
                const postElement = document.createElement('div');
                postElement.classList.add('post');
                postElement.style.marginTop = "20px";

                // กำหนดคลาส CSS และข้อความสำหรับปุ่มการถูกใจ
                let likeButtonClass = post.userLiked ? 'like-button liked' : 'like-button';
                let likeButtonText = post.userLiked ? '' : '';

                postElement.innerHTML = `
                    <div class="post" style="margin-top: 20px;">
                        <div class="post-header">
                            <img src="/img/select_b/${post.post_id}" alt="Profile Picture" class="profile-pic" style="object-fit:cover;">
                            <span class="username">${post.market_name}</span>
                        </div>
                        <div class="post-content">
                            ${post.post_discript}
                            
                        </div>
                        <div class="post-image">
                            <img src="/img/select/${post.post_id}" alt="Post">
                            
                        </div>
                        
                        <div class="post-footer">
                            <div id="post">
                                <div style="padding-left: 5px; padding-bottom: 7px;" id="likeCount-${post.post_id}">${post.likes} Likes</div>
                                <button class ="${likeButtonClass}" id="likeButton-${post.post_id}" onclick="toggleLike(${post.post_id},${post.user_id});">${likeButtonText}</button>
                        </div>
                    </div>
                `;
                mainContent.appendChild(postElement);
            });

            currentPage++;
            isFetching = false;
        });
}

        window.onscroll = function() {
            if (window.innerHeight + window.pageYOffset >= document.body.offsetHeight - 10) {
        loadMorePosts();
         }
            };
                loadMorePosts();
            </script>



 
            <script>
 
document.addEventListener('DOMContentLoaded', function () {
    var dropdown = document.querySelector('.dropdown');
    var dropdownMenu = document.querySelector('.dropdown-menu');
 
    // เมื่อคลิกที่ปุ่ม dropdown
    dropdown.addEventListener('click', function (event) {
        // ป้องกันเหตุการณ์เริ่มต้นของลิงก์
       
       
        // แสดงหรือซ่อน dropdown menu
        if (dropdownMenu.style.display === 'block') {
            dropdownMenu.style.display = 'none';
        } else {
            dropdownMenu.style.display = 'block';
        }
    });
 
    // ซ่อน dropdown เมื่อคลิกนอกเขต dropdown
    document.addEventListener('click', function (event) {
        var isClickInside = dropdown.contains(event.target);
 
        if (!isClickInside) {
            dropdownMenu.style.display = 'none';
        }
    });
});
 
       </script>
 

 
