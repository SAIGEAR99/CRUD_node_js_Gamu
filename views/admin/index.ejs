<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }
        .card-header {
            background-color: #343a40; /* Darker header */
        }
        .btn-custom {
            background-color: #ffffff; /* Green color */
            color: white;
        }
        .btn-custom:hover {
            background-color: #dfdfdf; /* Darker green on hover */
            color: white;
        }
        .table-hover tbody tr:hover {
            background-color: #f8f9fa; /* Hover effect for table rows */
        }
        .table th, .table td {
            text-align: center; /* Center align table cells */
        }
        .table th:nth-child(1), .table td:nth-child(1) {
            width: 5%; /* NO. column width */
        }
        .table th:nth-child(2), .table td:nth-child(2) {
            width: 20%; /* USER column width */
        }
        .table th:nth-child(6), .table td:nth-child(6) {
            width: 20%; /* ACTION column width */
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">ADMIN CONTROL</h5>
                <div>
                    <a href="/admin/add" class="btn btn-custom me-2 text-dark">Add User</a>
                    <a href="/logout" class="btn btn-outline-light">Logout</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <% if(rows && rows.length) { %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">NO.</th>
                        <th scope="col">USER</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        <th scope="col">Role</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach((row, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= row.username %></td>
                        <td><%= row.email %></td>
                        <td><%= row.password %></td>
                        <td><%= row.role %></td>
                        <td>
                            <a href="/admin/edit/<%= row.user_id %>" class="btn btn-success"><span class="bi bi-pencil-square"></span> Edit</a>
                            <a href="/admin/delete/<%= row.user_id %>" class="btn btn-danger" onclick="return confirm('Are you sure?')"><span class="bi bi-trash"></span> Delete</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <p class="text-center">No User found!</p>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
