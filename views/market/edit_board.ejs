                <script>
               
                    function showModal(modalId) {
                        var modal = document.getElementById(modalId);
                        modal.style.display = "block";
                        document.body.style.overflow = 'hidden';
                    }

                    function hideModal(modalId) {
                        var modal = document.getElementById(modalId);
                        modal.style.display = "none";
                        document.body.style.overflow = '';
                    }

                    // ทำการเพิ่ม event listener ให้กับ div ที่มี ID เป็น 'scan'
                    document.getElementById('scan').addEventListener('click', function() {
                        showModal('scan_m');
                    });
                    document.addEventListener('click', function(event) {
                var modal = document.getElementById('scan_m');
                // Check if the modal is open and if the click was outside of the modal
                if (modal.style.display === "block" && !modal.contains(event.target) && event.target.id !== 'scan') {
                    hideModal('scan_m');
                }
            });

                    // สคริปต์สำหรับการค้นหาที่อยู่
                    document.getElementById('scans').addEventListener('input', function () {
                        var query = this.value;
                        var resultsDiv = document.getElementById('search-results-scan');
                
                        if (query.trim() !== '') {
                            fetch('/search/api/scan?query=' + encodeURIComponent(query))
                                .then(function (response) {
                                    if (!response.ok) {
                                        throw new Error('Network response was not ok');
                                    }
                                    return response.json();
                                })
                                .then(function (data) {
                                    resultsDiv.innerHTML = '';
                                    data.results.forEach(function (result) {
                                        var resultItem = document.createElement('a');
                                        resultItem.href = "javascript:void(0);";
                                        resultItem.className = 'list-group-item list-group-item-action';
                
                                        // สร้างและเพิ่มภาพ
                                        var image = document.createElement('img');
                                        image.src = '/img/mk_img_mk/' + result.market_id;
                                        image.alt = 'Image';
                                        image.className = 'result-image';
                                        resultItem.appendChild(image);
                
                                        // สร้างและเพิ่มข้อความ (market_name)
                                        var text = document.createElement('span');
                                        text.className = 'result-text';
                                        text.appendChild(document.createTextNode(result.market_name));
                                        resultItem.appendChild(text);
                
                                        // สร้างและเพิ่มข้อความ (mk_discript)
