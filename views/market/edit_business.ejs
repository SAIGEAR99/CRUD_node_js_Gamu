        <script>

        document.getElementById('search').addEventListener('input', function () {
        var query = this.value;
        var resultsDiv = document.getElementById('search-results');
        
        if (query.trim() !== '') {
          fetch('/search/api?query=' + encodeURIComponent(query))
          .then(function (response) {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(function (data) {
            resultsDiv.innerHTML = '';
            data.results.forEach(function (result) {
              var resultItem = document.createElement('a');
              resultItem.href = "javascript:void(0);";
              resultItem.className = 'list-group-item list-group-item-action';
              resultItem.textContent = result.subdistrict_name + " - " + result.district_name + " - " + result.province_name + " - " + result.zip_code;
              resultItem.addEventListener('click', function() {
                document.getElementById('search').value = result.subdistrict_name + " - " + result.district_name + " - " + result.province_name + " - " + result.zip_code;
                resultsDiv.innerHTML = '';
              });
              resultsDiv.appendChild(resultItem);
            });
          })
          .catch(function (error) {
            console.error('Fetch error:', error);
          });
        } else {
          resultsDiv.innerHTML = '';
        }
        });
                </script>
                 
                
