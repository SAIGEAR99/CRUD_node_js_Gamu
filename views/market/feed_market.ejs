<script>
function toggleDropdown(postId) {
    const dropdownContent = document.querySelector(`#dropdown-content-${postId}`);
    const computedStyle = window.getComputedStyle(dropdownContent);

    if (computedStyle.getPropertyValue('display') === 'block') {
        dropdownContent.style.display = 'none';
        document.removeEventListener('click', closeDropdownOnClickOutside);
    } else {
        dropdownContent.style.display = 'block';

        // Use setTimeout to ensure the event listener is added after the UI update
        setTimeout(() => {
            document.addEventListener('click', closeDropdownOnClickOutside);
        }, 0);

        dropdownContent.addEventListener('mouseleave', function closeDropdown() {
            dropdownContent.style.display = 'none';
            dropdownContent.removeEventListener('mouseleave', closeDropdown);
            document.removeEventListener('click', closeDropdownOnClickOutside);
        });
    }

    function closeDropdownOnClickOutside(event) {
        if (!dropdownContent.contains(event.target)) {
            dropdownContent.style.display = 'none';
            document.removeEventListener('click', closeDropdownOnClickOutside);
        }
    }
}

             
function reportPost(postId) {
    // Prompt the user for a report reason
    let reportReason = prompt("กรุณาระบุเหตุผลในการรายงานโพสต์นี้:");
    if (reportReason !== null && reportReason.trim() !== "") {
        // Send the report request with the report reason
        fetch('/post/report-post/' + postId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ reason: reportReason }) // Send the report reason in the request body
        })
        .then(response => {
            if (response.ok) {
                console.log("โพสต์ถูกรายงานแล้ว");
                // You can update the UI or take any necessary actions
            } else {
                console.error("เกิดข้อผิดพลาดในการรายงานโพสต์");
            }
        })
        .catch(error => {
            console.error("Error:", error);
        });
    } else {
        // User cancelled the report or entered an empty reason
        console.log("การรายงานถูกยกเลิกหรือไม่มีเหตุผลที่ระบุ");
    }
}

</script>



