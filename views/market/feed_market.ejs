<script>
function toggleDropdown(postId) {
    const dropdownContent = document.querySelector(`#dropdown-content-${postId}`);
    const computedStyle = window.getComputedStyle(dropdownContent);

    if (computedStyle.getPropertyValue('display') === 'block') {
        dropdownContent.style.display = 'none';
        document.removeEventListener('click', closeDropdownOnClickOutside);
    } else {
        dropdownContent.style.display = 'block';

        // Use setTimeout to ensure the event listener is added after the UI update
        setTimeout(() => {
            document.addEventListener('click', closeDropdownOnClickOutside);
        }, 0);

        dropdownContent.addEventListener('mouseleave', function closeDropdown() {
            dropdownContent.style.display = 'none';
            dropdownContent.removeEventListener('mouseleave', closeDropdown);
            document.removeEventListener('click', closeDropdownOnClickOutside);
        });
    }

    function closeDropdownOnClickOutside(event) {
        if (!dropdownContent.contains(event.target)) {
            dropdownContent.style.display = 'none';
            document.removeEventListener('click', closeDropdownOnClickOutside);
        }
    }
}

             
