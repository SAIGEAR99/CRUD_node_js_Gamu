            usernameElement.addEventListener('click', function(event) {
                // ตรวจสอบว่า element มี attribute data-market-id หรือไม่
                const marketId = usernameElement.getAttribute('data-market-id') || usernameElement.getAttribute('data-market-name');
                const newURL = `/market/show_mk?market_id=${encodeURIComponent(marketId)}`;
                window.location.href = newURL;
            });
            usernameElement.classList.add('event-listener-added');
        }
    });
}

document.addEventListener('DOMContentLoaded', function() {
